<div class="Links">
  <div class="Links__Container">
    <a href="/home" class="Container__button">
      <img
        src="/logo-the-waris.png"
        alt="logo-the-waris"
        class="Container__img"
      />
      <h1 class="Container__h1">INGRESAR</h1>
    </a>
  </div>
</div>

<style lang="scss">
  @use './src/styles/mixins/utilities';
  @use './src/styles/mixins/mediaQueries';

  .Links {
    position: fixed;
    display: none;
    font-size: 2em;
    font-weight: bold;
    width: 100%;
    height: 100%;
    background: linear-gradient(315deg, #1d1d1f, #18181a);
    z-index: 99;

    @include mediaQueries.for-phone {
      font-size: 1.5em;
    }

    &__Container {
      width: inherit;
      height: inherit;
      @include utilities.flex(row, center, center);
    }

    .Container {
      &__button {
        @include utilities.flex(column, center, center, 1.5em);
        padding: 2em;
        border-radius: 96px;
        box-shadow: -8px -8px 13px #0b0b0c, 8px 8px 13px #2b2b2e;
        transition: all 0.3s ease-in-out;

        @include mediaQueries.for-phone {
          padding: 1.5em;
        }

        &:hover {
          box-shadow: -8px -8px 13px #2b2b2e, 8px 8px 13px #0b0b0c;
        }
      }

      &__img {
        width: 6em;
        @include mediaQueries.for-phone {
          width: 8em;
        }
      }
    }

    &--visible {
      display: block;
    }
  }
</style>

<script>
  const html = document.documentElement
  html.scrollHeight

  const isMaxScroll = () => {
    const maxScroll = html.scrollHeight - window.innerHeight
    html.scrollTop > maxScroll - 100
      ? document.querySelector('.Links')!.classList.add('Links--visible')
      : document.querySelector('.Links')!.classList.remove('Links--visible')
  }

  window.addEventListener('scroll', isMaxScroll)
</script>
